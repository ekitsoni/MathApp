<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="417dp"
        android:layout_height="731dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background2" />

    <TableLayout
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chapter1"
            android:layout_width="272dp"
            android:layout_height="90dp"
            android:backgroundTint="#046A00"
            android:text="Κεφάλαιο 1 \nΑριθμοί και πράξεις"
            android:textAllCaps="false"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chapter2"
            android:layout_width="272dp"
            android:layout_height="90dp"
            android:backgroundTint="#046A00"
            android:text="Κεφάλαιο 2\nΕξισώσεις"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/white"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/chapter3"
            android:background="@drawable/btn_bg"
            android:layout_width="272dp"
            android:layout_height="90dp"
            android:backgroundTint="#046A00"
            android:text="Κεφάλαιο 3\nΓεωμετρία"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="20sp" />

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>