<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Grades">

    <ImageView
        android:layout_width="417dp"
        android:layout_height="731dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/background2" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:background="#046A00"
        android:text="Βαθμολογία"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/chapter1Grade"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Κεφάλαιο 1:\nΔώσε το Διαγώνισμα"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/chapter2Grade"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Κεφάλαιο 2:\nΔώσε το Διαγώνισμα"
            android:textColor="#000000"
            android:textSize="24sp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/chapter3Grade"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:background="#FFFFFF"
            android:gravity="center"
            android:text="Κεφάλαιο 3:\nΔώσε το Διαγώνισμα"
            android:textColor="#000000"
            android:textSize="24sp" />
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>